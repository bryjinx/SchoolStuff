<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>UpdateGoals</servlet-name>
        <servlet-class>controller.UpdateGoals</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateTeams</servlet-name>
        <servlet-class>controller.UpdateTeams</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayerController</servlet-name>
        <servlet-class>controller.PlayerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateGoals</servlet-name>
        <url-pattern>/UpdateGoals</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateTeams</servlet-name>
        <url-pattern>/UpdateTeams</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerController</servlet-name>
        <url-pattern>/PlayerController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
